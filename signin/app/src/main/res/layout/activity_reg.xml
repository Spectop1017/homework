<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#5000ff00"
    tools:context="com.example.spectop.spectop14121901.RegActivity">

    <TextView
        android:id="@+id/tittle_Reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="20pt"
        android:gravity="center"
        android:text="注  册"
        />

    <TextView
        android:id="@+id/reg_01"
        android:layout_below="@+id/tittle_Reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="10pt"
        android:text="用户名: "/>

    <EditText
        android:id="@+id/reg_02"
        android:layout_toRightOf="@id/reg_01"
        android:layout_alignTop="@id/reg_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:paddingBottom="20dp"
        android:hint="如：Example"/>

    <TextView
        android:id="@+id/reg_03"
        android:layout_below="@id/reg_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="10pt"
        android:text="密码："
        />

    <EditText
        android:id="@+id/reg_04"
        android:layout_toRightOf="@id/reg_03"
        android:layout_alignTop="@id/reg_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:singleLine="true"
        android:password="true"
        android:hint="请输入密码"/>

    <TextView
        android:id="@+id/reg_05"
        android:layout_below="@id/reg_04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="确认密码："
        android:textSize="10pt"/>

    <EditText
        android:id="@+id/reg_06"
        android:layout_toRightOf="@id/reg_05"
        android:layout_alignTop="@id/reg_05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:password="true"
        android:paddingBottom="20dp"
        android:hint="请再次输入密码"/>

    <TextView
        android:id="@+id/reg_07"
        android:layout_below="@id/reg_06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="邮箱:"
        android:textSize="10pt"
        />

    <EditText
        android:id="@+id/reg_08"
        android:layout_toRightOf="@id/reg_07"
        android:layout_alignTop="@id/reg_07"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:singleLine="true"
        android:hint="此邮箱将用于密码找回"
        />

    <TextView
        android:id="@+id/reg_09"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_08"
        android:padding="10dp"
        />

    <CheckBox
        android:id="@+id/reg_10"
        android:layout_below="@id/reg_09"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我已认真阅读并同意该用户协议"/>

    <TextView
        android:id="@+id/reg_11"
        android:layout_below="@id/reg_10"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="《用户协议》"/>

    <TextView
        android:id="@+id/reg_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_11"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/reg_13"
        android:layout_below="@id/reg_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注   册"/>

</RelativeLayout>
