<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background_dim"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tittle_top_mainpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的笔记"
        android:textSize="24pt"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/add_new_note"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/tittle_top_mainpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/add_new_item"
        />

    <ImageView
        android:id="@+id/line_under_top"
        android:layout_below="@id/add_new_note"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        />

    <ListView
        android:id="@+id/list_content"
        android:layout_below="@id/line_under_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#00000000"
        android:dividerHeight="8pt"
        >

    </ListView>

</RelativeLayout>
